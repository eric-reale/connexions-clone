extends layout

block content
  .login-register-container
    a.login-back(href=`/login`)
      p back
    h2.login-register-form-header forgot password
    form.login-register-forms(action="/forgot-password" method="POST" autocomplete="off")
      input.email-password(type="email" name="email" placeholder="email address")
      input.login-primary.login-login(type="submit" value="password reset")
